{
	"name": "danmacom",
	"publisher": "dramforever",
	"displayName": "Danmacom",
	"description": "Turn danmaku into comments",
	"version": "0.1.1",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/dramforever/danmacom.git"
	},
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:danmacom.start"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Danmacom configuration",
			"properties": {
				"danmacom.backend": {
					"type": [
						"string"
					],
					"enum": [
						"bilibili",
						"external",
						""
					],
					"enumDescriptions": [
						"Built-in Bilibili backend",
						"External program",
						"Unset default value"
					],
					"default": "",
					"markdownDescription": "The backend to use"
				},
				"danmacom.backendConfig": {
					"type": "object",
					"default": {},
					"markdownDescription": "Backend configuration options"
				}
			}
		},
		"commands": [
			{
				"command": "danmacom.start",
				"category": "Danmacom",
				"title": "Start"
			},
			{
				"command": "danmacom.stop",
				"category": "Danmacom",
				"title": "Stop"
			},
			{
				"command": "danmacom.deleteComment",
				"category": "Danmacom",
				"title": "Delete comment"
			},
			{
				"command": "danmacom.deleteThread",
				"category": "Danmacom",
				"title": "Delete thread"
			},
			{
				"command": "danmacom.createThread",
				"category": "Danmacom",
				"title": "Create thread"
			},
			{
				"command": "danmacom.reply",
				"category": "Danmacom",
				"title": "Reply"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "danmacom.deleteComment",
					"when": "false"
				},
				{
					"command": "danmacom.deleteThread",
					"when": "false"
				},
				{
					"command": "danmacom.createThread",
					"when": "false"
				},
				{
					"command": "danmacom.reply",
					"when": "false"
				}
			],
			"comments/comment/title": [
				{
					"command": "danmacom.deleteComment",
					"group": "inline",
					"when": "commentController == danmacom"
				}
			],
			"comments/commentThread/title": [
				{
					"command": "danmacom.deleteThread",
					"group": "inline",
					"when": "commentController == danmacom"
				}
			],
			"comments/commentThread/context": [
				{
					"command": "danmacom.createThread",
					"group": "inline",
					"when": "commentController == danmacom && commentThreadIsEmpty"
				},
				{
					"command": "danmacom.reply",
					"group": "inline",
					"when": "commentController == danmacom && !commentThreadIsEmpty"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^10.14.17",
		"@types/vscode": "^1.34.0",
		"typescript": "^3.5.1",
		"vsce": "^1.75.0"
	},
	"dependencies": {
		"@types/node-fetch": "^2.5.6",
		"@types/ws": "^7.2.4",
		"node-fetch": "^2.6.0",
		"ws": "^7.4.6"
	}
}
